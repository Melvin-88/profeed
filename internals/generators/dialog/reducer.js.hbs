import * as actions from './actions.js';

const initialState = {
  open : false,
  locked : false,
  error : false,
  errorMessage : ''
};

export default function (state = initialState, action = {}) {
  const { type, payload } = action;

  if (type === actions.DIALOG_{{ splitUpperByUnderscore name }}_CLOSE) {
    return Object.assign({}, state, initialState);
  }


  if (type === actions.DIALOG_{{ splitUpperByUnderscore name }}_OPEN) {
    return Object.assign({}, state, {
      open : true
    });
  }

  if (type === actions.DIALOG_{{ splitUpperByUnderscore name }}_SUBMIT) {
    return Object.assign({}, state, {
      locked : true
    });
  }

  if (type === actions.DIALOG_{{ splitUpperByUnderscore name }}_SUBMIT_ERROR) {
    return Object.assign({}, state, {
      locked : false,
      error : true,
      errorMessage : payload.errorMessage
    });
  }

  if (type === actions.DIALOG_{{ splitUpperByUnderscore name }}_SUBMIT_SUCCESS) {
    return Object.assign({}, state, {
      locked : false
    });
  }

  return state;
}
